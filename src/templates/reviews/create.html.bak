{% extends 'base.html' %}

{% block title %}Write Review - Campus Resource Hub{% endblock %}

{% block additional_css %}
<style>
    .review-page {
        min-height: 100vh;
        padding-top: 80px;
    }

    .review-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: var(--text-secondary);
        text-decoration: none;
        font-family: 'Actor', sans-serif;
        font-size: 0.95rem;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        color: var(--text-primary);
        transform: translateX(-4px);
    }

    .review-card {
        background: var(--card-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--card-border);
        border-radius: 16px;
        padding: 32px;
    }

    .review-header {
        margin-bottom: 32px;
    }

    .review-title {
        font-family: 'Noto Serif', serif;
        font-size: 2rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 12px;
    }

    .resource-info {
        font-family: 'Actor', sans-serif;
        color: var(--text-secondary);
        margin-bottom: 8px;
    }

    .star-rating {
        display: flex;
        gap: 8px;
        margin-bottom: 24px;
    }

    .star {
        font-size: 2.5rem;
        cursor: pointer;
        transition: all 0.2s ease;
        color: var(--text-quaternary);
    }

    .star:hover,
    .star.active {
        color: #fbbf24;
        transform: scale(1.1);
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        font-family: 'Actor', sans-serif;
        font-size: 0.95rem;
        font-weight: 500;
        color: var(--text-primary);
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        background: var(--input-bg);
        border: 1px solid var(--input-border);
        border-radius: 12px;
        padding: 12px 16px;
        font-family: 'Actor', sans-serif;
        font-size: 0.95rem;
        color: var(--text-primary);
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: rgba(153, 9, 221, 0.6);
        box-shadow: 0 0 0 3px rgba(153, 9, 221, 0.2);
    }

    textarea.form-control {
        resize: vertical;
        min-height: 150px;
    }

    .submit-btn {
        background: linear-gradient(135deg, rgba(153, 9, 221, 0.8), rgba(134, 70, 238, 0.8));
        border: none;
        border-radius: 12px;
        padding: 14px 32px;
        font-family: 'Actor', sans-serif;
        font-size: 1rem;
        font-weight: 500;
        color: #fff;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(153, 9, 221, 0.4);
    }

    .error-message {
        color: #ef4444;
        font-size: 0.85rem;
        margin-top: 4px;
    }
</style>
{% endblock %}

{% block content %}
<div class="review-page">
    <div class="review-container">
        <a href="{{ url_for('resource.detail', resource_id=resource.resource_id) }}" class="back-link">
            ‚Üê Back to Resource
        </a>

        <div class="review-card">
            <div class="review-header">
                <h1 class="review-title">Write Your Review</h1>
                <div class="resource-info">
                    <strong>Resource:</strong> {{ resource.title }}
                </div>
            </div>

            <form method="POST" id="reviewForm">
                {{ form.hidden_tag() }}
                {{ form.booking_id }}
                {{ form.resource_id }}

                <div class="form-group">
                    <label class="form-label">Your Rating *</label>
                    <div class="star-rating" id="starRating">
                        <span class="star" data-rating="1"></span>
                        <span class="star" data-rating="2"></span>
                        <span class="star" data-rating="3"></span>
                        <span class="star" data-rating="4"></span>
                        <span class="star" data-rating="5"></span>
                    </div>
                    {{ form.rating(class="form-control", style="display: none;") }}
                    {% if form.rating.errors %}
                        <div class="error-message">{{ form.rating.errors[0] }}</div>
                    {% endif %}
                </div>

                <div class="form-group">
                    {{ form.comment.label(class="form-label") }}
                    {{ form.comment(class="form-control") }}
                    {% if form.comment.errors %}
                        <div class="error-message">{{ form.comment.errors[0] }}</div>
                    {% endif %}
                </div>

                {{ form.submit(class="submit-btn") }}
            </form>
        </div>
    </div>
</div>

<script>
const stars = document.querySelectorAll('.star');
const ratingInput = document.getElementById('rating');

stars.forEach(star => {
    star.addEventListener('click', function() {
        const rating = this.getAttribute('data-rating');
        ratingInput.value = rating;

        stars.forEach((s, index) => {
            if (index < rating) {
                s.classList.add('active');
            } else {
                s.classList.remove('active');
            }
        });
    });

    star.addEventListener('mouseenter', function() {
        const rating = this.getAttribute('data-rating');
        stars.forEach((s, index) => {
            if (index < rating) {
                s.style.color = '#fbbf24';
            }
        });
    });
});

document.querySelector('.star-rating').addEventListener('mouseleave', function() {
    const currentRating = ratingInput.value || 0;
    stars.forEach((s, index) => {
        if (index < currentRating) {
            s.style.color = '#fbbf24';
        } else {
            s.style.color = '';
        }
    });
});
</script>
{% endblock %}
